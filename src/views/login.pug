div#loginModal
    div.modal__columns
        div.modal__column
            div.modal__nav
                div.modal__nav__header
                    p.modal__nav__header--title Login
                    p.modal__nav__header--text 가볍고 즐거운 여행을 위해 짐을 맡기세요
                div.modal__nav__footer
                    img(src="images/logo.png" alt="logo" class="modal__footer--logo")

        div.modal__column.form
            div.modal__contents
                div.modal__contents--block
                    img(src="images/cancel.png" alt="cancel" class="modal__contents--cancelBtn")
                
                input(type="text" name="userId" class="modal__contents__input")
                input(type="password" name="userPassword" class="modal__contents__input")
                input(type="text" name="userName" class="modal__contents__input")
                input(type="text" name="userEmail" class="modal__contents__input")
                input(type="text" name="userPhoneNumber" class="modal__contents__input")
                input(type="text" name="userAddress" class="modal__contents__input")
                input(type="submit" class="loginButton")
            div.modal__footer
                p.forget--link Forgot Password
                span.register--text No Account?
                span.register--link Register now
                
                    